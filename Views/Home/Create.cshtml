@model EF_CodeFirstApproach.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<h1>Create New Student</h1>

<h4>Student</h4>
<hr />

@* Begin the form with the correct action and method *@
<form asp-action="Create" method="post">


    <div class="form-group">
        @* Label and input for Name *@
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        @* Label and input for Gender *@
        <label asp-for="Gender" class="control-label"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        @* Label and input for Age *@
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        @* Label and input for Standard *@
        <label asp-for="Standard" class="control-label"></label>
        <input asp-for="Standard" class="form-control" />
        <span asp-validation-for="Standard" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
    </div>
</form>


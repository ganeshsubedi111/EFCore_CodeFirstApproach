@model IEnumerable<EF_CodeFirstApproach.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Create")" class="btn btn-success">Create New</a>

@if (Model != null && Model.Any())
{
   
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }



    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Id)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Gender)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Age)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Standard)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => student.Id)</td>
                    <td>@Html.DisplayFor(modelItem => student.Name)</td>
                    <td>@Html.DisplayFor(modelItem => student.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => student.Age)</td>
                    <td>@Html.DisplayFor(modelItem => student.Standard)</td>
                    <td>

                        <a href="@Url.Action("Edit", "Home", new { id = student.Id })" class="btn btn-warning">Edit</a>

                        <a href="@Url.Action("Delete", "Home", new { id = student.Id })"
                           class="btn btn-danger"
                           onclick="return confirmDelete();">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found.</p>
}

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this record?');
    }
    setTimeout(function () {
        $('#success-alert').alert('close');
    }, 2000);
</script>